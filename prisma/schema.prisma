datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String @unique
  firstName String
  lastName  String

  twoFactorEnabled Boolean @default(false)
  twoFactorSecret String? /// @encrypted

  role UserRole @default(customer)

  password   Password?
  notes      Note[]
  accounts   Account[]
  plaidItems PlaidItem[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

enum UserRole {
  customer
  admin
}

model Note {
  id    String @id @default(cuid())
  title String
  body  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}

model Account {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  closedAt DateTime?

  customName String?
  type       AccountType @default(other)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String

  balanceSnapshots BalanceSnapshot[]
  plaidAccount     PlaidAccount?
}

enum AccountType {
  checking
  credit_card
  loan
  money_market
  mortgage
  property
  retirement_401k
  roth_ira
  savings
  traditional_ira
  other
}

model BalanceSnapshot {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  accountId String

  amount Int

  dateTime DateTime
}

model PlaidItem {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String

  status PlaidItemHealthStatus

  plaidItemId String /// @encrypted
  accessToken String /// @encrypted

  institutionId   String /// @encrypted
  institutionName String /// @encrypted

  plaidAccounts PlaidAccount[]
}

enum PlaidItemHealthStatus {
  healthy
  unhealthy
}

model PlaidAccount {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  plaidItem   PlaidItem @relation(fields: [plaidItemId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  plaidItemId String

  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  accountId String  @unique

  plaidAccountId String /// @encrypted
  officialName   String /// @encrypted
  name           String /// @encrypted
  mask           String /// @encrypted

  type    String /// @encrypted
  subtype String? /// @encrypted
}
